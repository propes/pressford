<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pressford Consulting</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)

    <style>
        .navbar {
            border: none;
        }

        .navbar-nav > li > a {
            padding-top: 15px;
        }
        
        #divSuccess, #divError {
            display: none;
            top:100px;
            left: 50%;
            position: fixed;
            transform: translate(-50%, -50%);
            z-index: 3000;
            padding: 10px 15px;
        }

        .message-text {
            margin-left: 5px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
        <hr style="margin: 0px; border-top: 3px solid #00adee;" />
    </div>

    <div id="divSuccess" class="alert alert-success" role="alert"><span class="glyphicon glyphicon-ok"></span><span class="message-text"></span></div>
    <div id="divError" class="alert alert-danger" role="alert"><span class="glyphicon glyphicon-remove"></span><span class="message-text"></span></div>

    <div class="content">
        <div class="header"></div>
        <div class="container">
            @RenderBody()
            <div class="footer">
                <div class="container">
                    <div class="row" style="padding-top: 18px; vertical-align: middle;">
                        <div class="col-xs-4">
                            <a style="color: white;" href="@Url.Action("Index", "Home")">
                                &copy; @DateTime.Now.Year - Pressford Consulting.
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
        function showMessage($div, message) {
            $div.find(".message-text").text(message);
            $div.show();
            setTimeout(function () {
                $div.hide();
            }, 3000)
        }

        $(document).ready(function () {
            var successMessage = "@ViewBag.SuccessMessage";
            if (successMessage != "") {
                showMessage($("#divSuccess"), successMessage);
            };
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>