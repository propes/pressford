@using PressfordPublishingSystem.Models
@model ArticleViewModel
@{
    ViewBag.Title = "Create Article";
}

<style>
    h1 {
        font-size: 32px;
        margin-bottom: 40px;
        display: inline-block
    }

    table {
        margin-top: 10px;
        margin-bottom: 10px;
    }

    label {
        font-weight: normal;
    }

    .back-button {
        float: right;
        margin-top: 30px;
    }

    .form-control {
        max-width: none;
    }

    #taBody {
        height: 500px;
    }
</style>

<div>
    <h1>Edit Article</h1>
    <a href='@Url.Action("Index")' class="btn btn-default back-button"><span class="glyphicon glyphicon-share-alt"></span>&nbsp; Back to Articles</a>
</div>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Title, "Title")
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Body, "Body")
        @Html.TextAreaFor(model => model.Body, new { id = "taBody", @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
    </div>
    <input type="submit" value="Save Changes" class="btn btn-primary" />
}
