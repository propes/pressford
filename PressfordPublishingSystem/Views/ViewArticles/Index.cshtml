@model ViewArticlesViewModel
@{
    ViewBag.Title = "Articles";
}

<style>
    .article-title {
        font-family: 'Montserrat', Helvetica, sans-serif;
        font-size: 36px;
        line-height: 1.5em;
        color: #555;
        display: inline-block;
    }

    .likes-panel {
        float: right;
        display: inline-block;
        margin-top: 20px;
        color: #009dd9;
    }

    .article-body {
        font-family: 'Roboto', Helvetica, sans-serif;
        font-size: 16px;
        line-height: 1.5em;
        margin-top: 10px;
        margin-bottom: 20px;
        color: #555;
    }

    .sidebar {
        display:inline-block;
        width:230px;
        vertical-align:top;
        font-size: 14px;
    }

    .sidebar ul {
        list-style-type: none;
        padding-left: 0;
        padding-bottom: 10px;
    }

    .sidebar li {
        padding-left: 15px;
        padding-bottom: 5px;
    }

    .sidebar li li {
        padding-left: 30px;
    }

    .main-panel {
        display:inline-block;
        padding-left:15px;
        width:calc(100% - 245px)
    }
</style>

<div class="page-header">
    <h1>Articles</h1>
</div>

<div class="sidebar">
    <ul>
        @foreach (var publicationYear in Model.PublicationMonthsByYear)
        {
            <li>@publicationYear.Key</li>
            <li>
                <ul>
                    @foreach (var publicationMonth in publicationYear)
                {
                        <li><a href="@Url.Action("Index", new { monthFilter = publicationMonth })">@publicationMonth.ToString("MMMM")</a></li>
                    }
                </ul>
            </li>
        }
    </ul>
</div>
<div class="main-panel">
    @foreach (var article in Model.Articles)
    {
        <div>
            <div class="article-title-block">
                <div class="article-title">@article.Title</div>
                <div class="likes-panel">
                    <span>@article.LikesCount likes</span>&nbsp;
                    <a href='@Url.Action("LikeArticle", new { article.Id })' class="btn btn-default" title="Like Article"><span class="glyphicon glyphicon-thumbs-up"></span></a>
                </div>
            </div>
            <div>
                Published by: @article.Author on @article.DatePublished.ToString("dd MMM yyyy")
            </div>
            <p class="article-body">@Html.Raw(article.Body)</p>
        </div>
        <hr />
    }
</div>